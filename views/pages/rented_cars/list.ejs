<%- include('../../fragments/header.ejs') %>

<main>
    <table class="table-list">
        <thead>
            <tr>
                <th>Numery rejestracyjne</th>
                <th>Imie klienta</th>
                <th>Nazwisko Klienta</th>
                <th>Data Podpisania umowy</th>
                <th>Rodzaj Wypożyczenia</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let Rentedcar of Rentedcars) { %>
                <tr>
                <td><%= Rentedcar.car.licensePlateNumber %></td>
                <td><%= Rentedcar.client.name %></td>
                <td><%= Rentedcar.client.surname %></td>
                <td><%= Rentedcar.carRentalDay %></td>
                <td><%= Rentedcar.typeOfRent %></td>
                <td>
                <ul class="list-actions">
                    <li><a href="/rented_cars/details/<%=Rentedcar._id%>" class="list-actions-button-details">Szczegóły</a></li>
                    <li><a href="/rented_cars/edit/<%=Rentedcar._id%>" class="list-actions-button-edit">Edytuj</a></li>
                    <li><a href="/rented_cars/delete/<%=Rentedcar._id%>" class="list-actions-button-delete">Usuń</a></li>
                </ul>
            </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="/rented_cars/add" class="button-add">Wynajmij Samochód</a></p>
</main>


<%- include('../../fragments/footer.ejs') %>