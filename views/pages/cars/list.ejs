<%- include('../../fragments/header.ejs') %>
      
<main>
    <table class="table-list">
        <thead>
            <tr>
                <th>Numer tablic rejestracyjnych</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Data produkcji</th>
                <th>Cena wypożyczenia za 1 dzień(PLN)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let Car of Cars) { %>
            <tr>
            <td><%= Car.licensePlateNumber %></td>
            <td><%= Car.mark %></td>
            <td><%= Car.model %></td>
            <td><%= Car.dayOfProduction %></td>
            <td><%= Car.pricePerDay %></td>
            <td>
                <ul class="list-actions">
                    <li><a href="/cars/details/<%=Car._id%>" class="list-actions-button-details">Szczegóły</a></li>
                    <li><a href="/cars/edit/<%=Car._id%>" class="list-actions-button-edit">Edytuj</a></li>
                    <li><a href="/cars/delete/<%=Car._id%>" class="list-actions-button-delete">Usuń</a></li>
                </ul>
            </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="/cars/add" class="button-add">Dodaj nowy samochód</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>