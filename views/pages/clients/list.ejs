<%- include('../../fragments/header.ejs') %>

<main>
    <table class="table-list">
        <thead>
            <tr>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Numer telefonu</th>
                <th>Id Klienta</th>
                <th>Numer Prawojazdy</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let Client of Clients) { %>
                <tr>
                <td><%= Client.name %></td>
                <td><%= Client.surname %></td>
                <td><%= Client.phoneNumber %></td>
                <td><%= Client._id %></td>
                <td><%= Client.drivingLicenseNumber %></td>
                <td>
                <ul class="list-actions">
                    <li><a href="/clients/details/<%=Client._id%>" class="list-actions-button-details">Szczegóły</a></li>
                    <li><a href="/clients/edit/<%=Client._id%>" class="list-actions-button-edit">Edytuj</a></li>
                    <li><a href="/clients/delete/<%=Client._id%>" class="list-actions-button-delete" >Usuń</a></li>
                </ul>
            </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="/clients/add" class="button-add">Dodaj nowego Klienta</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>